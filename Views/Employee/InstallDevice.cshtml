@using DeviceExamine.ViewModel;
@model ReadyDeviceDetailVm

@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

@section TitleSection{
    Install Device
}

@section HeaderSection{
}

@section ContentBody{
    <h2>Install Device</h2>
    <hr />
    <form action="/Employee/InstallDevicePost" method="post">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.ValidationMessage("CredentialError")
            </div>
            <table class="table table-striped table-responsive table-bordered">
                <tr>
                    <td>IMEI</td>
                    <td>@Model.Imei</td>
                </tr>
                <tr>
                    <td>Camera</td>
                    <td>@Model.Camera</td>
                </tr>
                <tr>
                    <td>Test On</td>
                    <td>@Model.TestOn</td>
                </tr>
                <tr>
                    <td>Test By</td>
                    <td>@Model.TestBy</td>
                </tr>
                <tr>
                    <td>Comment</td>
                    <td>@Model.Comment</td>
                </tr>
                <tr>
                    <td>Terminal SIM</td>
                    <td>
                        <input type="text" name="TerminalSim" id="TerminalSim" maxlength="23" required class="form-control" placeholder="SIM" />
                    </td>
                </tr>
                <tr>
                    <td>Car Number</td>
                    <td>
                        <input type="text" name="CarNo" id="CarNo" maxlength="23" required class="form-control" placeholder="Car No." />
                    </td>
                </tr>
                <tr>
                    <td>Technician</td>
                    <td>
                        <input type="text" name="Technician" id="Technician" maxlength="50" required class="form-control" placeholder="Technician" />
                    </td>
                </tr>
                <tr>
                    <td>Install Date</td>
                    <td>
                        <input type="date" name="InstallTime" id="InstallTime" required style="width:70%" />
                    </td>
                </tr>
            </table>
            <button type="submit" name="Imei" id="btnInstall" class="btn btn-default" value="@Model.Imei">
                <i class="glyphicon glyphicon-wrench"></i>&nbsp;Install
            </button>
            &nbsp;&nbsp;
            <button type="button" id="btnReset" class="btn btn-warning" onclick="ResetInputs();">
                <i class="glyphicon glyphicon-refresh"></i>&nbsp;Reset
            </button>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>
    <script>
        function ResetInputs() {
            document.getElementById('TerminalSim').value = "";
            document.getElementById('CarNo').value = "";
            document.getElementById('Technician').value = "";
            document.getElementById('InstallTime').value = "";
        }
    </script>
}

