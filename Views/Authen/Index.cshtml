@model DeviceExamine.ViewModel.UserVm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <title>Login</title>
    <link rel="icon" href="~/Images/favicon.ico" type="image/ico" />
    <style>
        .btn {
            color:white;
            border-color:#16B395;
            background-color:#16B395;
        }
        .btn:hover {
            color: #18BC9C;
            border-color: #18BC9C;
            background-color: white;
        }

        h1 {
            color: #18BC9C;
            text-align: center;
        }
    </style>
</head>
<body>
    <form id="form1" action="/Authen/DoLogin" method="post">
        <div class="container">
            <h1>Device Inspection</h1>
            <div class="row">
                <div class="col-md-4">
                    <img src="http://www.pcb-mexico.com/imagenesN/pcbs.jpeg" class="img-responsive" />
                </div>
                <div class="col-md-4">
                    <hr />
                    @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
                    <fieldset>
                        <legend>Please Login</legend>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><i aria-hidden="true" class="glyphicon glyphicon-user"></i></span>
                            <input type="text" id="tbUn" name="UserName" class="form-control" placeholder="input username" required maxlength="20" />
                        </div>
                        <br />
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon2"><i aria-hidden="true" class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" id="tbPw" name="Password" class="form-control" placeholder="input password" required maxlength="20" aria-describedby="basic-addon2" />
                        </div>
                        <br />
                        <button type="submit" class="btn">
                            <span class="glyphicon glyphicon-log-in"></span> Login
                        </button>
                    </fieldset>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </form>
</body>
</html>
