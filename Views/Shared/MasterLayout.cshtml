@using DeviceExamine.ViewModel
@model BaseVm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="icon" href="~/Images/favicon.ico" type="image/ico" />
    <title>@RenderSection("TitleSection")</title>
    <style>
        h2 {
            text-align:center;
            color:#18BC9C;
        }
        .btn-default {
            color:white;
            background-color:#18BC9C;
            border-color:#18BC9C;
        }
        .btn-default:hover {
            color:#18BC9C;
            background-color:white;
            border-color:#18BC9C;
        }

        .btn-warning {
            color: #EC971F;
            border-color: #EC971F;
            background-color: white;
        }
    </style>
    @RenderSection("HeaderSection", false)
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">ABC TECHNOLOGY</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/Employee/DeviceOne"><i class="glyphicon glyphicon-edit"></i>&nbsp;Device Test<span class="sr-only">(current)</span></></a></li>
                        <li><a href="/Employee/Index"><i class="glyphicon glyphicon-check"></i>&nbsp;Ready Device</a></li>
                        <li>
                            <a href="/Employee/InstalledDeviceList"><i class="glyphicon glyphicon-road"></i>&nbsp;Installed Device</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <br />
                            Hello, @Model.UserName
                        </li>
                        <li>
                            <a href="/Authen/Logout"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        @RenderSection("ContentBody")
    </div>
</body>
</html>
